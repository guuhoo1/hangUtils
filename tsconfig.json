{
  "compilerOptions": {
    "target": "es6", // 编译目标
    "module": "commonjs", // 模块系统
    "declaration": true, // 生成 .d.ts 类型声明文件
    "outDir": "./dist", // 输出目录
    "rootDir": "./src", // 源代码目录
    "strict": true, // 启用严格类型检查
    "esModuleInterop": true, // 支持 CommonJS 和 ES 模块的互操作
    "lib": ["es2017", "dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@wuguohang/src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "generate-exports.js"], // 包含的文件
  "exclude": ["node_modules"] // 排除的文件
}
